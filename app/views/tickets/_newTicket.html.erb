<div class="container ">
  <div class="p-5">
    <%# <h3 class="">Tickets</h3> %>

    <%= simple_form_for [@room,@ticket], html: { novalidate: false } do |f| %>


      <div class="mt-4">
        <%= f.input :title, as: :string, required: true%>
      </div>

      <div class="mt-8">
        <%= f.input :description, as: :string, required: true, input_html: {minlength: 10} %>
      </div>

      <div class="mt-4">
        <%= f.input :priority, collection: ["Low", "Medium", "High"], required: true %>
      </div>

      <div class="mt-4">
      <%= f.input :photos, as: :file, input_html: { multiple: true } %>
      </div>

      <div class="row">
        <div class="mt-4 mb-6 d-flex align-items-center justify-content-around">
          <%= f.submit "Send ticket", class: "send_new_ticket_btn-ghost" %>
          <%= link_to "Cancel", dashboard_path(tab:"tenant"), class: "send_new_ticket_btn-ghost" %>
        </div>
      </div>


      <% end %>
  </div>
</div>

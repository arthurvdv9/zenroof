<div class="m-3 mt-5">
  <%# the two buttons to change view %>
  <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
          <a class="nav-link active" id="tenant-tab" data-bs-toggle="tab" href="#tenant" role="tab" aria-controls="tenant" aria-selected="true">Tenant</a>
      </li>

      <li class="nav-item" role="presentation">
          <a class="nav-link" id="owner-tab" data-bs-toggle="tab" href="#owner" role="tab" aria-controls="owner" aria-selected="false">Owner</a>
      </li>
  </ul>

  <%# what happens when you click on the tab%>
  <div class="tab-content" id="myTabContent">

    <%# tenant view %>
    <div class="tab-pane fade show active" id="tenant" role="tabpanel" aria-labelledby="tenant-tab">
      <%# render the search bar here %>

      <%# toggle the form via button %>
      <div data-controller="toggle" class="">
        <button data-action="click->toggle#fire" class="btn btn-outline-primary m-3">Add a new ticket</button>

        <div data-toggle-target="togglableElement" class="d-none">
          <%= render 'tickets/newTicket', ticket: @ticket%>
        </div>
      </div>
        <div class="m-4">
          <%= render "tickets/myTickets", tickets: @tickets %>
        </div>

        <a href="/history" class="btn btn-primary">Go to History</a>
    </div>

    </div>
    <div class="tab-content" id="myTabContent">

    <%# owner view %>
      <div class="tab-pane fade" id="owner" role="tabpanel" aria-labelledby="owner-tab">
        <div class="row justify-content-center">
          <div class="col-sm-8 my-3">
            <%= form_with url: houses_path, method: :get, class: "d-flex" do %>
              <%= text_field_tag :query,
                    params[:query],
                    class: "form-control",
                    placeholder: "Search for a house or an address!"
                %>
              <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
        <%= render "houses/houseList" %>
      </div>
    </div>
  </div>
</div>

<%# product card UI KIT %>
<div class="card-house">
  <% if house.photo.attached? %>
    <%= cl_image_tag house.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>

  <div class="card-house-infos">
    <h2><%= house.name.capitalize %></h2>
    <p><%= house.address.capitalize %></p>

    <% number_tickets = 0 %>

    <% house.rooms.each do |room| %>
      <% room.tickets.each do |ticket| %>
        <% if ticket.status == "Pending" %>
          <% number_tickets += 1 %>
        <% end %>
      <% end %>
    <% end %>

    <% if number_tickets != 0 %>
      <div class="notification-bubble text-center" style="color:#fff"><%= number_tickets %></div>
    <% end %>

  </div>
</div>
